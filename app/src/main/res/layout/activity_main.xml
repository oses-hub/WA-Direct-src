<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity"
    android:background="#fff"
    >




<ImageView
    android:layout_width="match_parent"
    android:layout_height="400sp"
    android:src="@drawable/homeclear"

    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who Would You Like To Send A\n WhatsApp Message?"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textColor="#27447E"/>

    >



   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:gravity="center_horizontal"
       android:orientation="horizontal"
       android:paddingTop="50sp"
       >



       <com.hbb20.CountryCodePicker
           android:id="@+id/ccp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:onClick="onCountryPickerClick"
           tools:ignore="OnClick" />


       <EditText
           android:id="@+id/PhoneNumberTextBox"
           android:digits="0123456789"
           android:inputType="number"
           android:textColorHint="#fff"
           android:layout_width="230sp"
           android:layout_height="45sp"
           android:background="@drawable/textbox_layout"
           android:textSize="15sp"
           android:textAlignment="center"
           android:gravity="center"
            android:textColor="@color/black"
           android:hint="Phone Number"


           />
   </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="50sp"
    >
    <Button
        android:id="@+id/StartChatButton"
        android:layout_width="192sp"
        android:layout_height="41sp"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Start Chat"
        android:background="@drawable/button_layout"

        />
</LinearLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="App Created By S.SAEED"
    android:gravity="bottom|center"
    android:paddingTop="60sp"
    android:textColor="@color/black"


    />
</LinearLayout>